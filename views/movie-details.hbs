<div id="movie-details">
    <img src={{this.movie.image}} alt="">

    <div>
        <a href={{location.href}}>Go back</a>

        <h3>{{this.movie.title}}</h3>

        <p>Director {{this.movie.director}}</p>

        <ul>
            <p>Stars</p>
            {{#each this.movie.stars}}
                <li>{{this.star}}</li>
            {{/each}}
        </ul>

        <p>{{this.movie.description}}</p>

        {{#each this.movie.showtimes}}
            <span>{{this.showtime}} |</span>
        {{/each}}
 </div>
</div>
